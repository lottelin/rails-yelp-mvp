<p id="notice"><%= notice %></p>
<h1>Restaurant Details</h1>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<div>
  <p>Reviews</p>

  <div
    <ul>
    <% @restaurant.reviews.each do |review| %>
        <li>
        <%= review.content %> & the rating is <%= review.rating %>
        <br>

    <% end %>
  </ul>
  </div>

  <div>
    <%= link_to "Add your review", new_restaurant_review_path(@restaurant)  %>
  </div>
</div>

<%= link_to 'Back to main page', restaurants_path %>
